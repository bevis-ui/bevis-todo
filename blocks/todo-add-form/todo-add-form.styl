.todo-add-form {

    &__title {
        font-family: $common['font-family'];
        font-size: 70px;
        font-weight: bold;

        position: absolute
        top: -95px;

        width: 100%;

        color: rgba(255, 255, 255, 0.3);
        text-shadow: -1px -1px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    &__add-field {
        font-size: 24px;
        line-height: 1.4em;

        position: relative;

        margin: 15px 0 0;
        padding: 17px 16px 17px 60px;

        background: #f8f8f8;
        box-sizing: border-box;

        &::before {
            position: absolute;
            content: '';
            z-index: 4;

            top: -15px;
            left: 0;

            width: 100%;

            height: 15px;
            border-bottom: 1px solid #6c615c;
            background: #8d7d77;
            background: linear-gradient(top, rgba(132, 110, 100, 0.8), rgba(101, 84, 76, 0.8));
            border-top-left-radius: 1px;
            border-top-right-radius: 1px;
        }

        & .input__control{
            font-family: $common['font-family'];
            font-size: 24px;
            font-weight: 300;

            width: 100%;
            height: 100%;

            display: block;
            border: none;
            outline: none;

            color: rgb(77, 77, 77);

            background: transparent;

            &::-webkit-input-placeholder {
                font-style: italic;
            }
        }
    }

}
